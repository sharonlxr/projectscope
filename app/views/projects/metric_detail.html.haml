%div.col-xs-2
  %div.metric_overview
    %h4
      Metric
    %p
      %strong
        = METRIC_NAMES[@metric_name.to_sym]
    %h4
      Team
    %p
      %strong
        = link_to @project.name, project_path(@project.id)
    %h4
      Score Trend
    %div.chart_place{id: "project-#{@project.id}-series-#{@metric_name}"}
    = link_to 'Return', project_path(@project.id), class: 'btn btn-default'
%div.col-xs-3
-# TODO use @general_metric_comments to create all those comments
%div.col-xs-7
  - num = 0
  - @comments.each do |mc_pair|
    %h3
      = (Date.today-mc_pair.first).strftime('%Y-%m-%d')
    = render partial: 'comment_thread', :locals => {:days_ago => mc_pair.first,
                                                    :sample_id => mc_pair.second,
                                                    :comments => mc_pair.fourth, 
                                                    :metric_name => mc_pair.third,
                                                    :num => num, 
                                                    :thread_type => "metric_sample"}
    - num = num + 1
      
      
  
